# roles/lb/templates/nginx.conf.j2
user  www-data;
worker_processes auto;
pid /run/nginx.pid;

events { worker_connections 1024; }

http {
    upstream api_pool {
        zone api_pool 64k;
        {% for u in lb_upstreams %}
        server {{ u }};
        {% endfor %}
        keepalive 32;
    }

    server {
        listen 443 ssl http2;
        server_name {{ lb_server_name }};

        ssl_certificate     {{ lb_cert_path }};
        ssl_certificate_key {{ lb_key_path }};

        ssl_protocols TLSv1.2 TLSv1.3;
        ssl_prefer_server_ciphers off;

        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_ssl_server_name on;

        location /healthz { proxy_pass https://api_pool/healthz; }
        location /       { proxy_pass https://api_pool/; }
    }

    server {
        listen 80;
        server_name {{ lb_server_name }};
        return 301 https://$host$request_uri;
    }
}
